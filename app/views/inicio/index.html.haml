.contenedor
  %div
    -if flash[:mensaje]
      #mensaje-flash{:style => "display:none;"}
        %p{ :class => "ui-state-highlight ui-corner-all", :style => "margin-top: 20px; padding: 3px 3px" }
          %span.ui-icon.ui-icon-info{ :style =>"display:inline-block;" }
          #{flash[:mensaje]}  
      =javascript_tag "$(document).ready(function(){ $('#mensaje-flash').show('pulsate',{},'fast'); });" 
  - if @cursos_abiertos_nuevo.count > 0 
    %ul.center
      %h3
        %p Inscripciones Nuevos: 
        -@cursos_abiertos_nuevo.each do |curso|
          - secciones = curso.tipo_curso.secciones.where(:periodo_id => @periodo_inscripcion_id, :esta_abierta => true).delete_if{|s| s.curso.grado != 1}.delete_if{|s| !s.hay_cupo?}
          - catidad_secciones = secciones.count
          - cupo = 0
          - @horarios = secciones.collect{|s| s.horario}.uniq
          - secciones.each{|s| cupo += s.cupo}
          %li{:style => "display:inline-block; margin-bottom:10px;"}
            - if cupo <= 0
              = button_to "Cupos agotados para #{curso.tipo_curso.descripcion}",nil ,{:disabled => true,  :class => 'ui-button'}
            - else
              = button_to "#{curso.tipo_curso.descripcion} - Cupos: #{cupo} (En #{catidad_secciones} Seccion(es))", {:action => "ingrese_ci", :controller => "inscripcion", :id => curso.id}, { :class => 'ui-button'}


    / .titulo
    /   -@secciones.each do |s|
    /     = "cupo: #{s.cupo}, horario: #{s.horario}"
  .titulo
    =@content.html_safe
  - @por_definir = 'Por definir'
  #inscripciones
    %h2 Seleccione el Idioma de su interés para ampliar la información:
    %ul
      %li=  link_to 'Inglés(Adultos)', "#IN_AD", :id => 'INTE', :class => 'btn_idiomas'
      %li=  link_to 'Inglés(Niños)', "#IN_NI", :id => 'INNI', :class => 'btn_idiomas'
      %li=  link_to 'Inglés(Adolescentes)', "#IN_TE", :id => 'INTE', :class => 'btn_idiomas'
      %li=  link_to 'Alemán', "#AL_AD", :id => 'ALAD', :class => 'btn_idiomas'
      %li=  link_to 'Francés', "#FR_AD", :id => 'FRAD', :class => 'btn_idiomas'
      %li=  link_to 'Italiano', "#IT_AD", :id => 'ITAD', :class => 'btn_idiomas'
      %li=  link_to 'Portugués', "#PG_AD", :id => 'PGAD', :class => 'btn_idiomas'
      %li=  link_to 'Nivelación', "#NIVE", :id => 'NIV', :class => 'btn_idiomas'

    - @tipo_cursos.each do |tipo_curso|
      -@inscripciones = tipo_curso.inscripciones.delete_if{|i| i.tipo_inscripcion_id.eql? 'NI'}.sort_by{|i| i.descripcion}
      %div{:id => tipo_curso.id.join("_"), :style => 'background-color:white;' }
        %ul
          %li
            - @inscripciones.each do |curso|
              %h2
                %b= curso.tipo_inscripcion.descripcion.capitalize
              %ul
                %li
                  Fecha y Hora de Inscripción:
                  %p
                    %b= curso.fecha_inscripcion
                %li
                  Fecha y Hora de Entrega de Planilla:
                  %p
                    %b= curso.fecha_entrega_planilla                  
                %li
                  - @arancel = (curso.tipo_inscripcion_id.eql? 'NU') ? "#{ParametroGeneral.find("COSTO_NUEVOS").valor.to_i}Bs." : "#{TipoConvenio.find('REG').monto.to_i}Bs." 
                  Arancel:
                  %b= (curso.tipo_estado_inscripcion_curso_id.eql? 'PR' or curso.tipo_estado_inscripcion_curso_id.eql? 'AB') ? @arancel : @por_definir


    #NIVE{:style => 'background-color:white;'}
      %ul
        %li
          - @nivelaciones.each do |nivelacion|
            %h2
              %b= nivelacion.tipo_curso.descripcion.capitalize
            %ul
              %li
                Fecha Prueba Oral:
                %b= (nivelacion.apertura and !nivelacion.tipo_estado_inscripcion_curso_id.eql? 'CE') ? I18n.localize(nivelacion.apertura, :format => "%A, %d de %B de %Y a las  %I:%M %p") : @por_definir
                %br
                %br
              %li
                Fecha Prueba Escrita:
                %b= (nivelacion.cierre and !nivelacion.tipo_estado_inscripcion_curso_id.eql? 'CE') ? I18n.localize(nivelacion.cierre, :format => "%A, %d de %B de %Y a las  %I:%M %p") : @por_definir
                %br
                %br
              %li
                Arancel:
                %b= (nivelacion.tipo_estado_inscripcion_curso_id.eql? 'PR' or nivelacion.tipo_estado_inscripcion_curso_id.eql? 'AB') ? ParametroGeneral.costo_examen : @por_definir
  %br
  %br
