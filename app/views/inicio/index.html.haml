.contenedor
  %div
    -if flash[:mensaje]
      #mensaje-flash{:style => "display:none;"}
        %p{ :class => "ui-state-highlight ui-corner-all", :style => "margin-top: 20px; padding: 3px 3px" }
          %span.ui-icon.ui-icon-info{ :style =>"display:inline-block;" }
          #{flash[:mensaje]}  
      =javascript_tag "$(document).ready(function(){ $('#mensaje-flash').show('pulsate',{},'fast'); });" 
  - if false and @cursos_abiertos_nuevo.count > 0 
    %ul.titulo.center
      %h2
        %p Inscripciones Nuevos 
        -@cursos_abiertos_nuevo.each do |curso|
          - secciones = curso.tipo_curso.secciones.where(:periodo_id => @periodo_inscripcion_id, :esta_abierta => true).delete_if{|s| s.curso.grado != 1}.delete_if{|s| !s.hay_cupo?}
          - catidad_secciones = secciones.count
          - cupo = 0
          - secciones.each{|s| cupo += s.cupo}
          - if cupo <= 0
            %li{:style => "display:inline-block;"}
              = button_to "Cupos agotados para #{curso.tipo_curso.descripcion}",nil ,{:disabled => true}
          - else
            %li{:style => "display:inline-block;"}
              = button_to "#{curso.tipo_curso.descripcion} - Cupos: #{cupo} (En #{catidad_secciones} Seccion(es))", :action => "ingrese_ci", :controller => "inscripcion", :id => curso.id





    / .titulo
    /   -@secciones.each do |s|
    /     = "cupo: #{s.cupo}, horario: #{s.horario}"
  .titulo
    =@content.html_safe

  #inscripciones
    %h2 Seleccione el Idioma de su interés para ampliar la información:
    %ul
      %li=  link_to 'Inglés(Adultos)', "#IN_AD", :id => 'INTE', :class => 'btn_idiomas'
      %li=  link_to 'Inglés(Niños)', "#IN_NI", :id => 'INNI', :class => 'btn_idiomas'
      %li=  link_to 'Inglés(Adolescentes)', "#IN_TE", :id => 'INTE', :class => 'btn_idiomas'
      %li=  link_to 'Alemán', "#AL_AD", :id => 'ALAD', :class => 'btn_idiomas'
      %li=  link_to 'Francés', "#FR_AD", :id => 'FRAD', :class => 'btn_idiomas'
      %li=  link_to 'Italiano', "#IT_AD", :id => 'ITAD', :class => 'btn_idiomas'
      %li=  link_to 'Portugués', "#PG_AD", :id => 'PGAD', :class => 'btn_idiomas'      
    - @por_definir = 'Por definir'
    - @tipo_cursos.each do |tipo_curso|
      -@inscripciones = tipo_curso.inscripciones.sort_by{|i| i.descripcion}
      %div{:id => tipo_curso.id.join("_")}
        %ul
          %li
            - @inscripciones.each do |curso|
              %h2
                %b= curso.tipo_inscripcion.descripcion.capitalize
              %ul
                %li
                  Fecha y Hora de Inicio de Inscripción:
                  %b= curso.apertura ? I18n.localize(curso.apertura, :format => "%A, %d de %B de %Y a las  %I:%M %p") : @por_definir
                  %br
                  %br
                %li
                  Fecha y Hora de Cierre de Inscripción:
                  %b= curso.cierre ? I18n.localize(curso.cierre, :format => "%A, %d de %B de %Y a las  %I:%M %p") : @por_definir
                  %br
                  %br
                %li
                  Entrega de Planilla: 
                  desde el
                  %b= curso.apertura_entrega_planilla ? I18n.localize(curso.apertura_entrega_planilla, :format => "%A, %d de %B de %Y a las  %I:%M %p") : @por_definir
                  hasta el
                  %b= curso.cierre_entrega_planilla ? I18n.localize(curso.cierre_entrega_planilla, :format => "%A, %d de %B de %Y a las  %I:%M %p") : @por_definir
                  %br
                  %br
                %li
                  - @arancel = (curso.tipo_inscripcion_id.eql? 'NU') ? "#{ParametroGeneral.find("COSTO_NUEVOS").valor.to_i}Bs." : "#{TipoConvenio.find('REG').monto.to_i}Bs." 
                  Arancel:
                  %b= (curso.tipo_estado_inscripcion_curso_id.eql? 'PR' or curso.tipo_estado_inscripcion_curso_id.eql? 'AB') ? @arancel : @por_definir
  .center
    <div style="font-weight:bold;font-size:x-large">
    <strong style="background-color:#ff3300;color:#ffffff">&nbsp;NO DEPOSITE SIN TENER LA PLANILLA DE INSCRIPCIÓN&nbsp;
    </strong>
    </div>
    %br
    <div>
    <strong style="font-size:x-large;background-color:#ff3300;color:#ffffff">&nbsp;VERIFIQUE EL MONTO Y EL NÚMERO DE CUENTA EN&nbsp;SU&nbsp;PLANILLA&nbsp;DE INSCRIPCIÓN ANTES DE DEPOSITAR&nbsp;
    </strong>
    </div>
    %br
    <div>
    <strong style="font-size:x-large;background-color:#ff3300;color:#ffffff">&nbsp;EL MATERIAL NO ESTÁ INCLUÍDO EN EL COSTO DE LA MATRÍCULA
    </strong>
    </div>
    %br
    %br
    <div>
    <strong style="font-size: 20px;line-height: 135%;color: #555555;font-weight: bold;">
    &nbsp;*&nbsp;BIENVENIDOS *&nbsp;WELCOME *&nbsp;BEM-VINDO *&nbsp;BIENVENU *&nbsp;</strong>
    </div>
    <div>
    <strong style="font-size: 20px;line-height: 135%;color: #555555;font-weight: bold;">&nbsp;* WILLKOMMEN *&nbsp;BENVENUTO *
    </strong>
    </div> 


