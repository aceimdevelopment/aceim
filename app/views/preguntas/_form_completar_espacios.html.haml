= form_for([@segmento, @preguntas.build]) do |f|
	%table
		%tr.req
			%td.derecha.separado
				%b= "*Pregunta/Ítem:"
			%td{:style => 'width: 100%;'}
				= f.text_area :clave, :size => '100x5;'
		%tr
			%td
			%td= "IMPORTANTE:Recuerde que por cada secuencia de '_' debe incluir su correspondiente respuesta en siguiente cuadro de opciones."
		%tr.req
			%td.derecha.separado
				%b= "*Opción(es):"
			%td
				= f.text_field :respuesta, :style => 'width: 100%;'
		%tr
			%td

			%td= "IMPORTANTE: Recuerde separar por coma cada opción."
		%tr
			%td
			%td
				%input.btn.small{:type => 'submit', :value => 'Agregar Pregunta/Ítem', :name => 'commit'}
