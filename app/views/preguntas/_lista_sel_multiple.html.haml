%div{:id => "actividad_#{@actividad.id}"}
	%ol{:type => 'A'}
		- @preguntas.each_with_index do |pregunta,i|
			- respuesta = pregunta.respuestas.first
			%li
				%p
					%b
						- if action_name.eql? 'wizard_paso2'

							= form_tag({:controller => 'preguntas',:action => "actualizar_puntaje_respuesta"}, {:class => "inline", :remote => true} ) do
								= "(#{respuesta.valor})"
								- if action_name.eql? 'wizard_paso2' 
									= link_to 'Eliminar Pregunta', {:action => 'eliminar_pregunta',:id => pregunta.id}, :data =>  { :confirm => '¿Está seguro?' }, :class => "btn_eliminar small", :style => 'background-color: lightsalmon;'

								= hidden_field_tag :id, respuesta.id
								= hidden_field_tag :examen_id, @examen.id
								= '/ Puntaje:'
								= number_field_tag :puntaje, respuesta.puntaje, {:min => 1, :max => 20, :step => 0.5}
								= submit_tag "actualizar", :id => "submit", :name => "submit", :class => "btn small", :disable_with => "Actualizando..."
							.span2{:id => "respuesta_#{respuesta.id}", :style => 'padding:3px 3px; margin:2px 0px;'}
						- else
							= raw pregunta.valor


				%table.likert.tablefilter
					- pregunta.opciones.each_with_index do |opc,i|
						%tr
							- eql = false
							%td= "#{i+1}."
							%td{:style => "min-width:300px;"}= opc.valor
							- eql = opc.valor.casecmp(respuesta.valor).zero? if (opc.valor and respuesta)
							%td= radio_button_tag "opciones[#{opc.valor}]", nil, eql, :disabled => true, :class => 'radio'

			%p.division



