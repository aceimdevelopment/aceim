%h3 Capacidad de los Cursos
%table.tablesorter.tablefilter.likert
  %thead
    %tr
      %th{:width => "40%"}
        Parámetro
      %th{:width => "40%"}
        Valor
      %th{:width => "20%"}
        Acción
  %tbody
    %tr
      %td
        Capacidad Actual
      %td
        =@capacidad_cursos
      %td
        =link_to_modal "Cambiar",{:action => "cambiar_capacidad_curso_modal",:title =>"Cambiar Capacidad Cursos",:width=>300}

%br/
%br/


%h3 Períodos
%table.tablesorter.tablefilter.likert
  %thead
    %tr
      %th{:width => "40%"}
        Parámetro
      %th{:width => "40%"}
        Valor
      %th{:width => "20%"}
        Acción
  %tbody
    %tr
      %td
        Periodo Actual
      %td
        =@periodo_actual
      %td
        =link_to_modal "Cambiar",{:action => "cambiar_periodo_modal",:title =>"Cambiar Período Actual por Defecto",:width=>300,:params => {:invocador => "cambiar_periodo_general"}}
        ="&nbsp;&nbsp;|&nbsp;&nbsp;".html_safe
        =link_to_modal "Crear Nuevo Periodo",{:action => "crear_nuevo_periodo_modal",:title =>"Crear Nuevo Período",:width=>300}
        


    %tr
      %td
        Periodo Anterior
      %td
        =@periodo_anterior
      %td
        ="-----"

    %tr
      %td
        Periodo Calificación
      %td
        =@periodo_calificacion
      %td
        =link_to_modal "Cambiar",{:action => "cambiar_periodo_modal",:title =>"Cambiar Período de Calificación",:width=>300,:params => {:invocador => "cambiar_periodo_calificacion"}}


    %tr
      %td
        Periodo Inscripción
      %td
        =@periodo_inscripcion
      %td
        =link_to_modal "Cambiar",{:action => "cambiar_periodo_modal",:title =>"Cambiar Período de Inscripción",:width=>300,:params => {:invocador => "cambiar_periodo_inscripcion"}}

