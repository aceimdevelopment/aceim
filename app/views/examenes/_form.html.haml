= form_for @examen do |f|
  -if @examen.errors.any?
    #error_explanation
      %h2= "#{pluralize(@examen.errors.count, "error")} prohibited this examen from being saved:"
      %ul
        - @examen.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :descripcion
    = f.text_field :descripcion
  .field
    = f.label :duracion
    = f.number_field :duracion
  .field
    = f.label :orden
    = f.text_field :orden
  .field
    = f.label :curso_idioma_id
    = f.text_field :curso_idioma_id
  .field
    = f.label :curso_tipo_categoria_id
    = f.text_field :curso_tipo_categoria_id
  .field
    = f.label :curso_tipo_nivel_id
    = f.text_field :curso_tipo_nivel_id
  .actions
    = f.submit 'Save'
