%h1= @titulo
.well.factura
	.center
		%br
		%h2 Universidad Central de Venezuela
		%h2 Facultad de Humanidades y Educación
		%h2 Escuela de Idiomas Modernos
	.well
		= link_to 'Eliminar examen', {:action => 'eliminar_examen', :id => @examen.id} , :data =>  { :confirm => '¿Está seguro?' },  :class => "btn small flotar_derecha"
		%h2= "Datos Básicos del Examen"

		%table
			%tr 
				%td.derecha
					= 'Curso:'
				%td
					%b= "#{@examen.curso.descripcion} - #{@examen.orden.capitalize} Examen"
			- if @examen.periodo
				%tr
					%td.derecha
						='Período:'
					%td
						%b= @examen.periodo.ordenado
			%tr
				%td.derecha
					='Duración:'
				%td
					%b= "#{@examen.duracion} minutos"


.division
	.well
		#accordion
			=render :partial => '/segmentos/wizard_list'
		.division
		= link_to 'Agregar Actividad', 'javascript:void(0)' , :class => "btn", :onclick => "$(form_segmento).show('slow'); $(this).remove();"
		%div{:id => "form_segmento", :style => 'display:none;'}
			=render :partial => '/segmentos/wizard_form' 



